{
  "name": "actionai",
  "version": "0.0.0",
  "description": "A TypeScript GNOME Extension",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "postbuild": "npm run compile-schemas && npm run copy-files",
    "copy-files": "mkdir -p ./dist && cp ./metadata.json ./dist/ && cp ./src/stylesheet.css ./dist/stylesheet.css",
    "compile-schemas": "mkdir -p ./dist/schemas && glib-compile-schemas schemas --targetdir=./dist/schemas"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpinilloslr/actionai.git"
  },
  "author": "Joaquin Pinillos <hello@jpinillos.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jpinilloslr/actionai/issues"
  },
  "homepage": "https://github.com/jpinilloslr/actionai#readme",
  "sideEffects": false,
  "devDependencies": {
    "eslint": "^9.26.0",
    "eslint-plugin-jsdoc": "^50.6.17",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@girs/gjs": "^4.0.0-beta.23",
    "@girs/gnome-shell": "^48.0.2"
  }
}
